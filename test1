import React from "react";
import { observer } from "mobx-react-lite";
import {
  Box,
  CssBaseline,
  ThemeProvider,
} from "@mui/material";
import DefaultSidebar from "./DefaultSidebar";
import DefaultHeader from "./DefaultHeader";
import { Outlet } from "react-router-dom";
import { theme } from "./BaseLayout.style";
import { mainPageStore } from "../../stores/MainPageStore";

interface BaseLayoutProps {
  header?: React.ReactNode;
  sidebar?: React.ReactNode;
}

const BaseLayout = observer((props?: BaseLayoutProps) => {
  const header = props?.header ?? <DefaultHeader />;
  const sidebar = props?.sidebar ?? <DefaultSidebar />;
  const { sidebarCollapsed } = mainPageStore;

  return (
    <ThemeProvider theme={theme}>
      <CssBaseline />

      {/* Header - full width top */}
      <Box
        sx={{
          width: "100%",
          borderBottom: "1px solid rgba(0,0,0,0.1)",
          overflowX: "hidden",
        }}
      >
        {header}
      </Box>

      {/* Main area: Sidebar + MainContent */}
      <Box
        sx={{
          display: "flex",
          width: "100%",
          height: "calc(100vh - 48px)", // adjust if your header height is different
          overflow: "hidden",
        }}
      >
        {/* Sidebar */}
        <Box
          sx={{
            width: sidebarCollapsed ? 60 : 240,
            borderRight: "1px solid rgba(0,0,0,0.1)",
            flexShrink: 0,
            height: "100%",
            overflowY: "auto",
          }}
        >
          {sidebar}
        </Box>

        {/* MainContent */}
        <Box
          sx={{
            flexGrow: 1,
            overflowY: "auto",
            height: "100%",
            padding: 2,
            bgcolor: "#F9FAFB",
          }}
        >
          <Outlet />
        </Box>
      </Box>
    </ThemeProvider>
  );
});

export default BaseLayout;
