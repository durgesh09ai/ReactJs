import React, { useState } from "react";
import { observer } from "mobx-react-lite";
import { Box, Container } from "@mui/material";
import UserProfile from "../components/UserProfile/UserProfile";
import Sidebar from "../components/WorkspaceSetup/Sidebar";
import { ModelConfigurationPanel } from "../components/LLMModelSelection/ModelConfigurationPanel ";
import SourceSetup from "../components/SourceSetup/SourceSetup";
import TargetSetup from "../components/TargetSetup/TargetSetup";
import WorkBookSpace from "../components/WorkBookSpace/WorkBookSpace";
import { LanguageConfigurationPanel } from "../components/Languages/LanguageConfigurationPanel ";
import WorkSpaceDetailSetup from "../components/WorkSpaceDetailSetup/WorkSpaceDetailSetup";
import { mainPageStore } from "../stores/MainPageStore";

const WorkspaceSetup: React.FC = () => {

  const {
    selectedItem,
    setSelectedItem
   }  = mainPageStore;

  const renderContent = () => {
    switch (selectedItem) {
      case "User Profile":
        return <UserProfile />;
      case "Source":
          return <SourceSetup />;  
      case "Target":
          return <TargetSetup />;      
      case "WorkSpace":
          return <WorkBookSpace />; 
      case "LLM Setting":
        return <ModelConfigurationPanel />;  
      case "Languages":
        return <LanguageConfigurationPanel />;  
      default:
        return null;
    }
  };

  return (
    <Container maxWidth="xl" sx={{m:0,p:0}}>
      <Box
        sx={{
          display: 'flex',
          gap: 2,
          bgcolor: '#fff',
          p: 0,
          borderRadius: 2,
          justifyContent: 'center',
          alignItems: 'flex-start',
          my: 1
          }}
      >
        <Sidebar/>
        
        <Box sx={{ flexGrow: 1, minWidth: "82%" }}>
          {renderContent()}
        </Box>
      </Box>
    </Container>
  );
};

export default observer(WorkspaceSetup);
