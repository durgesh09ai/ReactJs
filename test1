{/* Left Side Tabs */}
<Box sx={{ width: 60, borderRight: '1px solid #ddd', bgcolor: '#fff', position: 'relative' }}>
  <Box sx={{ height: '100%', overflowY: 'auto' }}>
    {currentSideTabs.map((item, index) => (
      <ListItemButton
