app.post('/api/data-agentic-ai', async (req, res) => {
  const { query } = req.body; // ðŸ‘ˆ coming from React
  const SECRET_KEY = 'ddd-3'; // Or from process.env

  const ds_dict = {
    dataframe_split: {
      columns: ['query'],
      data: [[query]] // ðŸ‘ˆ nested data from frontend
    }
  };

  try {
    const apiResponse = await axios.post(
      'https://your-external-api.com/endpoint',
      ds_dict, // ðŸ‘ˆ sending ds_dict as the POST body
      {
        headers: {
          Authorization: `Bearer ${SECRET_KEY}`,
          'Content-Type': 'application/json'
        }
      }
    );

    res.json({
      message: 'Data processed successfully',
      apiResponse: apiResponse.data
    });
  } catch (error) {
    console.error('Error calling external API:', error.message);
    res.status(500).json({ error: 'API call failed' });
  }
});
