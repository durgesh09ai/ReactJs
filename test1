import React from 'react';
import {
  Table,
  TableBody,
  TableCell,
  TableContainer,
  TableHead,
  TableRow,
  Paper,
  Typography,
  Chip,
} from '@mui/material';

const data = [
  {
    sourceType: 'GitHub',
    techType: 'JavaScript',
    totalFiles: 120,
    status: 'Active',
  },
  {
    sourceType: 'Azure Blob',
    techType: 'Python',
    totalFiles: 87,
    status: 'Pending',
  },
];

export const SourceTable = () => {
  return (
    <TableContainer component={Paper} elevation={2}>
      <Table>
        <TableHead>
          <TableRow>
            <TableCell><Typography fontWeight="bold">Source Type</Typography></TableCell>
            <TableCell><Typography fontWeight="bold">Tech Type</Typography></TableCell>
            <TableCell><Typography fontWeight="bold">Total Files Content</Typography></TableCell>
            <TableCell><Typography fontWeight="bold">Status</Typography></TableCell>
          </TableRow>
        </TableHead>
        <TableBody>
          {data.map((row, index) => (
            <TableRow key={index}>
              <TableCell>{row.sourceType}</TableCell>
              <TableCell>{row.techType}</TableCell>
              <TableCell>{row.totalFiles}</TableCell>
              <TableCell>
                <Chip
                  label={row.status}
                  color={row.status === 'Active' ? 'success' : 'warning'}
                  size="small"
                  sx={{ fontWeight: 500 }}
                />
              </TableCell>
            </TableRow>
          ))}
        </TableBody>
      </Table>
    </TableContainer>
  );
};
