// utils/dateFormatter.ts
import dayjs from "dayjs";

export const formatCosmosDate = (
  timestamp: number,
  format: "full" | "date" | "time" = "full"
): string => {
  if (!timestamp || typeof timestamp !== "number") return "";

  const date = dayjs.unix(timestamp); // Converts Cosmos timestamp to Dayjs object

  switch (format) {
    case "date":
      return date.format("DD-MM-YYYY"); // e.g., "24-07-2025"
    case "time":
      return date.format("hh:mm A"); // e.g., "02:56 PM"
    case "full":
    default:
      return date.format("DD-MM-YYYY, hh:mm A"); // e.g., "24-07-2025, 02:56 PM"
  }
};


  Created At: {formatCosmosDate(item.createdAt, "full")}
