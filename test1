html, body {
  margin: 0;
  padding: 0;
  overflow: hidden; /* Avoid scrollbars */
  height: 100%;
  width: 100%;
}

#root {
  transform: scale(0.67);
  transform-origin: top left;
  width: calc(100% / 0.67); /* Expand root width to match scaling */
  height: calc(100% / 0.67); /* Expand root height to match scaling */
  overflow: hidden;
}
