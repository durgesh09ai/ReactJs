import React from 'react';
import {
  Table,
  TableBody,
  TableCell,
  TableContainer,
  TableHead,
  TableRow,
  Paper,
  Typography,
  Chip,
} from '@mui/material';

const data = [
  {
    sourceType: 'GitHub',
    techType: 'JavaScript',
    totalFiles: 120,
    status: 'Active',
  },
  {
    sourceType: 'Azure Blob',
    techType: 'Python',
    totalFiles: 87,
    status: 'Pending',
  },
];

export const SourceTable = () => {
  return (
    <TableContainer
      component={Paper}
      elevation={0}
      sx={{
        border: '1px dotted #ccc',
        borderRadius: 2,
      }}
    >
      <Table>
        <TableHead>
          <TableRow
            sx={{
              backgroundColor: '#F3FAFF',
            }}
          >
            {['Source Type', 'Tech Type', 'Total Files Content', 'Status'].map((label) => (
              <TableCell
                key={label}
                sx={{
                  fontWeight: 'bold',
                  fontSize: '14px',
                  color: '#0F4977',
                }}
              >
                {label}
              </TableCell>
            ))}
          </TableRow>
        </TableHead>
        <TableBody>
          {data.map((row, index) => (
            <TableRow key={index}>
              <TableCell>{row.sourceType}</TableCell>
              <TableCell>{row.techType}</TableCell>
              <TableCell>{row.totalFiles}</TableCell>
              <TableCell>
                <Chip
                  label={row.status}
                  color={row.status === 'Active' ? 'success' : 'warning'}
                  size="small"
                  sx={{ fontWeight: 500 }}
                />
              </TableCell>
            </TableRow>
          ))}
        </TableBody>
      </Table>
    </TableContainer>
  );
};
